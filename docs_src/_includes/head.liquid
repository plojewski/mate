{%- if site.github.build_revision -%}
    {%- assign build_version = site.github.build_revision -%}
{%- else -%}
    {%- assign build_version = site.time | date: '%Y%m%d%H%M%S' -%}
{%- endif -%}

{%- assign page_slug = page.url | split: '/' | last -%}

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1">
    <meta name="title" content="{% if page.title %}{{ page.title }}{% else %}{{ site.title }}{% endif %}">
    <meta name="description" content="{{ page.description }}">

    {%- if page_slug -%}
        <title>{% if page.title %}{{ page.title }} &mdash; {{ site.title }}{% else %}{{ site.title }}{% endif %}</title>
    {%- else -%}
        <title>{{ page.title }}</title>
    {%- endif %}

    <link rel="stylesheet" href="{{ site.baseurl }}/dist/assets/styles/mate.min.css">
    <link rel="stylesheet" href="{{ site.baseurl }}{{ site.assets }}/styles/css/mate-doc.css">
    <link rel="stylesheet" href="{{ site.baseurl }}{{ site.assets }}/js/vendors/prism/prism.css">

    <link rel="apple-touch-icon" sizes="180x180" href="{{ site.baseurl }}{{ site.assets }}/favicons/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ site.baseurl }}{{ site.assets }}/favicons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="{{ site.baseurl }}{{ site.assets }}/favicons/favicon-16x16.png">
    <link rel="manifest" href="{{ site.baseurl }}{{ site.assets }}/favicons/manifest.json">
    <link rel="mask-icon" href="{{ site.baseurl }}{{ site.assets }}/favicons/safari-pinned-tab.svg" color="#1ab394">
    <link rel="shortcut icon" href="{{ site.baseurl }}{{ site.assets }}/favicons/favicon.ico">
    <meta name="msapplication-config" content="{{ site.baseurl }}{{ site.assets }}/favicons/browserconfig.xml">
    <meta name="theme-color" content="#1ab394">
</head>