{% if site.github.build_revision %}
    {% assign build_version = site.github.build_revision %}
{% else %}
    {% assign build_version = site.time | date: '%Y%m%d%H%M%S' %}
{% endif %}

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1">
    <title>{% if page_title %}{{ page_title }} &mdash; {{ site_title }}{% else %}{{ site_title }}{% endif %}</title>
    <meta name="title" content="{% if page_title %}{{ page_title }}{% else %}{{ site_title }}{% endif %}">
    <meta name="description" content="{{ page_description }}">

    <link rel="stylesheet" href="{{ site.baseurl }}/dist/assets/styles/mate.min.css?v={{ build_version }}">
    <link rel="stylesheet" href="{{ site.baseurl }}{{ site.assets }}/styles/css/mate-doc.css?v={{ build_version }}">
    <link rel="stylesheet" href="{{ site.baseurl }}{{ site.assets }}/js/vendors/prism/prism.css?v={{ build_version }}">
</head>